<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

<%= image_tag "bg.jpg", class: "full-background" %>
<div class="container-fluid text-white position-sticky">
  <br>
  <h1 id="title" class="text-centered"><%= title %></h1>
  <br><br><br>
  <div class="offset-md-4 col-md-4">
    <%= form_for(@placetobe) do |form| %>
      <div class="field">
        <div class="form-group">
          <%= form.label :name, 'Nom :' %>
          <%= form.text_field :name, class: "form-control", id: :name %>
        </div>
        <div class="form-group">
          <%= form.label :description, 'Description :' %>
          <%= form.text_area :description, class: "form-control", style: "resize: vertical;", id: :description, rows: 4 %>
        </div>
        <div class="form-group">
          <%= form.label :cost, 'Coût :' %>
          <%= form.number_field :cost, class: "form-control", id: :cost, step: 0.1, min: 0%>
        </div>
        <div class="form-group">
          <%= form.label :mark, 'Note :' %>
          <%= form.number_field :mark, class: "form-control", id: :mark, min: 0, max: 10, step: 0.5 %>
        </div>
        <div class="form-group">
          <%= form.label :planet_id, 'Planète :' %>
          <select name="placetobe[planet_id]" id="placetobe_planet_id" class="form-control">
            <% Planet.all.each do |pl| %>
              <option value="<%= pl.id %>"><%= pl.name %></option>
            <% end %>
          </select>
        </div>
        <div class="action">
          <%= form.submit 'Enregistrer', class: "btn btn-success float-left" %>
          <%= link_to "Retour", planets_path, class: "btn btn-danger float-right" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
