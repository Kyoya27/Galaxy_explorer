<%= image_tag "bg.jpg", class: "full-background" %>
<div class="container-fluid text-white position-sticky">
  <br>
  <h1 id="title" class="text-centered">Edition d'une planète</h1>
  <br><br><br>
  <div class="offset-md-4 col-md-4">
    <%= form_with(model: @planet) do |form| %>
    <div class="form-group">
      <%= form.label :name, "Nom (non modifiable) :" %>
      <%= form.text_field :name, class: "form-control disabled", id: :name, style: "resize: vertical;", disabled: :boolean %>
    </div>
    <div class="form-group">
      <%= form.label :description, "Description :" %>
      <%= form.text_area :description, class: "form-control", id: :description, rows: 5 %>
    </div>
    <div class="form-group">
      <%= form.label :weather, "Météo :" %>
      <%= form.text_field :weather, class: "form-control", id: :weather %>
    </div>
    <div class="form-group">
      <%= form.label :galaxy, "Galaxie :" %>
      <%= form.text_field :galaxy, class: "form-control", id: :galaxy %>
    </div>
    <div class="actions">
      <%= form.submit 'Enregistrer', class: "btn btn-outline-success float-right" %>
    </div>
    <% end %>
  </div>
